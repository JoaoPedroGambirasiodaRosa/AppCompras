 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearlayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:text="Escolha o seu Produto:"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/purple_500"
/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbArroz"
            android:layout_below="@+id/titulo"
            android:layout_marginLeft="10dp"
            android:text="Arroz (R$2,69)"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbLeite"
            android:layout_below="@+id/cbArroz"
            android:layout_marginLeft="10dp"
            android:text="Leite (R$5,00)"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbCarne"
            android:layout_below="@+id/cbLeite"
            android:layout_marginLeft="10dp"
            android:text="Carne (R$9,70)"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbFeijao"
            android:layout_below="@+id/cbCarne"
            android:layout_marginLeft="10dp"
            android:text="FeijÃ£o (R$2,70)"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btCalc"
            android:layout_below="@+id/cbFeijao"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Total das Compras"
            />

    </RelativeLayout>